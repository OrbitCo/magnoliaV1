<div class="content-block load_content">
    <h1>
        {% helper lang.l('user_send_gift', 'virtual_gifts') %}
    </h1>

    <div class="modal-body scroll inside">
        {% if gifts|length > 0 %}
            <form id="virtual_gifts_form" class="confirm-gifts-form" action="" method="POST" role="form">
                <div>
                    {% helper lang.l('user_choose_gift', 'virtual_gifts') %}
                </div>
                <div class="scroll_f_kiss">
                    <ul>
                        {% for gift in gifts %}
                            <li>
                                <div>
                                    <a href="{{ site_url }}virtual_gifts/send_gift/{{ user_id }}/{{ gift.id }}">
                                        <img src="{{ gift.mediafile.thumbs_data.big.file_url }}">
                                        {% helper start.currency_format_output({'value': gift.price}) %}
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="form-group">
                    <textarea name="message" id="message" maxlength="{{ maxlength }}"
                              row="5" cols="50" autocomplete="false" class="form-control"></textarea>
                </div>
                <input type="hidden" value="{{ object_id }}" name="object_id">
                <input type="button" name="btn_send" id="btn_send_kisses" class="btn"
                       value="{% helper lang.l('kiss', 'kisses', '', 'button') %}">
                <div id="symbols" class="fright">
                    {{ maxlength }}
                </div>
            </form>
        {% else %}
            {% helper lang.l('gifts_empty', 'virtual_gifts') %}
        {% endif %}
    </div>
</div>

<script>
    $(function () {
        $('label img').on('click', function () {
            $("#" + $(this).parents("label").attr("for")).click();
        });

        var maxLength = $('#message').attr('maxlength');
        $('#message').keyup(function () {
            var curLength = $('#message').val().length;
            $(this).val($(this).val().substr(0, maxLength));
            var remaning = maxLength - curLength;
            if (remaning < 0)
                remaning = 0;
            $('#symbols').html(remaning);
            if (remaning < 10) {
                $('#symbols').addClass('warning');
            } else {
                $('#symbols').removeClass('warning');
            }
        });

    });
</script>
