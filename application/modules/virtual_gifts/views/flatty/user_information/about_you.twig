<div class="content-page">
    <div class="ui-title">{% helper lang.l('header_main', 'virtual_gifts') %}</div>
    <div class="ui-descr">
        {% helper lang.l('field_usr_inf_description', 'virtual_gifts') %}
    </div>
</div>
{% for item in about_you %}
    <div class="col-xs-12 content-page">
        <div class="ui-title bb">                         
            {% helper lang.l('gift_receipt_from_user', 'virtual_gifts') %} {{ item.user.output_name }}
        </div>
        {% if item.comment %}
            <div>
                {% helper lang.l('gift_comment_field_label', 'virtual_gifts') %}: {{ item.comment }}
            </div>
        {% endif %}
        <div>{{ item.receipt_date }}</div>
    </div>
{% endfor %}