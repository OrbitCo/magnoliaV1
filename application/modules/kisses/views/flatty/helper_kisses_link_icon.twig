<span id="btn-kisses-{{ kisses_button_rand }}" class="user-menu-item">
    <dt>
        <a href="javascript:void(0);"
           class="btn-kisses{% if kisses_back %}-back{% endif %} link-r-margin"
           title="{% helper lang.l('kiss', 'kisses', '', 'button') %}">
            <i class="far fa-smile"></i>
        </a>
    </dt>
    <dd>
        <a href="javascript:void(0);"
           class="btn-kisses{% if kisses_back %}-back{% endif %} link-r-margin"
           title="{% helper lang.l('kiss', 'kisses', '', 'button') %}">
            {% helper lang.l('kiss', 'kisses', '', 'button') %}
        </a>
    </dd>
</span>
<script>
    $(function () {
        loadScripts(
                "{% helper utils.jscript('kisses', 'kisses.js', 'path') %}",
                function () {
                    kisses = new Kisses({
                        siteUrl: site_url,
                        use_form: true,
                        btnForm: 'btn-kisses-{{ kisses_button_rand }} a',
                        urlGetForm: 'kisses/ajax_get_kisses/{{ user_id }}',
                        urlSendForm: 'kisses/ajax_set_kisses/{{ user_id }}',
                        langs: {
                            kiss_empty: '{% helper lang.l('no_select_kisses', 'kisses') %}'
                        }
                    });
                },
                ['kisses'],
                {async: false}
        );

    });
</script>
