{% include '@app/header.twig' %}
<style>
    .sk-wave {
        width: 6em;
        height: 4em;
        margin: auto;
        text-align: center;
        font-size: 1em;
        display: none;
    }
    .sk-wave .sk-rect {
        background-color: #337ab7;
        height: 100%;
        width: .5em;
        display: inline-block;
        -webkit-animation: sk-wave-stretch-delay 1.2s infinite ease-in-out;
        animation: sk-wave-stretch-delay 1.2s infinite ease-in-out;
    }
    .sk-wave .sk-rect-1 {
        -webkit-animation-delay: -1.2s;
        animation-delay: -1.2s;
    }
    .sk-wave .sk-rect-2 {
        -webkit-animation-delay: -1.1s;
        animation-delay: -1.1s;
    }
    .sk-wave .sk-rect-3 {
        -webkit-animation-delay: -1s;
        animation-delay: -1s;
    }
    .sk-wave .sk-rect-4 {
        -webkit-animation-delay: -0.9s;
        animation-delay: -0.9s;
    }
    .sk-wave .sk-rect-5 {
        -webkit-animation-delay: -0.8s;
        animation-delay: -0.8s;
    }

    @-webkit-keyframes sk-wave-stretch-delay {
        0%, 40%, 100% {
            -webkit-transform: scaleY(0.4);
            transform: scaleY(0.4);
        }
        20% {
            -webkit-transform: scaleY(1);
            transform: scaleY(1);
        }
    }

    @keyframes sk-wave-stretch-delay {
        0%, 40%, 100% {
            -webkit-transform: scaleY(0.4);
            transform: scaleY(0.4);
        }
        20% {
            -webkit-transform: scaleY(1);
            transform: scaleY(1);
        }
    }
    .grecaptcha-badge{
        display: none;
    }
    .errors_box{
        text-align: center;
        font-size: 26px;
        color: #ffffff;
        background: #f17a7a;
        margin-bottom: 8px;
    }
</style>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <form method="post" action="{{data.action}}" name="save_form" enctype="multipart/form-data"
                  class="form-horizontal form-label-left">
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                        {% helper lang.l('field_captcha_type', 'start') %}:</label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <div id="captcha_type" class="btn-group" data-toggle="buttons">
                            {% for item in captcha.types %}
                                <label data-captcha="type" data-captcha_type="{{ item }}" class="btn btn-default{% if item == captcha.captcha_type %} active{% endif %}"
                                       data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                                    <input type="radio" name="data[captcha_type]" value="{{ item }}"{% if item == captcha.captcha_type %} checked{% endif %}>
                                    {% helper lang.l('field_captcha_'~item, 'start') %} {% if item == 'google' %} v3 {% endif %}
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            <div data-captcha="block" data-captcha_block="google" class="{% if captcha.captcha_type != 'google' %}hide{% endif %}">
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">{% helper lang.l('btn_register', 'start') %}: </label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <a href="https://www.google.com/recaptcha/intro/index.html">https://www.google.com/recaptcha/intro/index.html</a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">{% helper lang.l('field_captcha_google_site_key', 'start') %}: </label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <input id="googleSiteKey" class="form-control" type="text" value="{{ captcha.site_key }}" name="data[google_site_key]">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">{% helper lang.l('field_captcha_google_secret_key', 'start') %}: </label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <input readonly id="googleSecretKye" class="form-control" type="text" value="{{ captcha.secret_key }}" name="data[google_secret_key]">
                    </div>
                </div>
                <div class='sk-wave'>
                    <div class='sk-rect sk-rect-1'></div>
                    <div class='sk-rect sk-rect-2'></div>
                    <div class='sk-rect sk-rect-3'></div>
                    <div class='sk-rect sk-rect-4'></div>
                    <div class='sk-rect sk-rect-5'></div>
                </div>
                <div class="errors_box"></div>
            </div>

            <button id="btnSaveCaptchaSettings" class="btn btn-primary" name="btn_save" value="1">{% helper lang.l('btn_save', 'start') %}</button>
        </form>
    </div>
</div>
</div>
<div class="clearfix"></div>
{% helper utils.jscript('start', 'AdminStart.js') %}
<script type='text/javascript'>
    $(function () {
        new AdminStart({
            siteUrl: '{{ base_url }}'
        });
    });
</script>
{% include '@app/footer.twig' %}
