<div class="row">
    {% for k, v in counter %}
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
        <div class="tile-stats">
            <div class="icon"><i class="fa fa-solid fa-comments"></i>
            </div>
            <div class="count">{{ v }}</div>

            <h3>{% helper lang.l('filed_statistics_sent_messages_'~k, 'chatbox') %}</h3>
            <p>{% helper lang.l('filed_statistics_sent_messages', 'chatbox') %}</p>
        </div>
    </div>
    {% endfor %}
</div>
<div class="clearfix"></div>
