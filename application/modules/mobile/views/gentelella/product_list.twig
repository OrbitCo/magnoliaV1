<div class="x_title">
    <h2>{% helper lang.l('sett_product_list', 'mobile') %}</h2>
    <div class="clearfix"></div>
</div>
<div class="x_content">

    <div id="actions">        
        <a class="btn btn-primary" href="{{ site_url }}admin/mobile/productEdit">
            {% helper lang.l('link_add_product', 'mobile') %}
        </a>
    </div>

    <table id="product" class="table table-striped responsive-utilities jambo_table">
        <thead>
            <tr class="headings">
                <th class="column-title">{% helper lang.l('field_product_type', 'mobile') %}</th>
                <th class="column-title">{% helper lang.l('field_product_sku', 'mobile') %}</th>
                <th class="column-title">{% helper lang.l('field_product_name', 'mobile') %}</th>
                <th class="column-title">{% helper lang.l('field_product_price', 'mobile') %}</th>
                <th class="column-title">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for item in list %}
            <tr class="even pointer">
                <td class="a-center">{{ item.type }}</td>
                <td class="a-center">{{ item.sku }}</td>
                <td class="a-center">{{ item.name }}</td>
                <td class="a-center icons">{{ item.price }}</td>
                <td class="icons">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary"
                                        onclick = "document.location.href='{{ site_url }}admin/mobile/productEdit/{{ item.id }}'">
                                {% helper lang.l('link_edit_product','mobile') %}
                        </button>
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">                        
                            <li>
                                <a href="{{ site_url }}admin/mobile/productEdit/{{ item.id }}">
                                    {% helper lang.l('link_edit_product','mobile') %}
                                </a>
                            </li>
                            <li>
                                <a href="{{ site_url }}admin/mobile/productDelete/{{ item.id }}">
                                    {% helper lang.l('link_delete_product','mobile') %}
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>