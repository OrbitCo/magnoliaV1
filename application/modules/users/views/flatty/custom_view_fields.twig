{% for key, field in fields_data %}
    <div class="field-block clearfix" data-field="fe_{{ key }}" {% if is_owner %}data-action="change-field"{% endif %}>
        <div class="field-name col-xs-4 col-sm-4 col-md-4 col-lg-4">
            {{ field.name }}:
        </div>
        <div class="field-info col-xs-12 col-sm-8 col-md-8 col-lg-8">
            {% if field.field_type == 'select' %}
                {% if field.value is not empty %}
                    {{ field.value|nl2br }}
                {% else %}
                    <p class="example-fields">
                        {% helper lang.l('field_add', 'users') %}: {% helper users.usersFieldsExample({'field': 'fe_'~key}) %}
                    </p>
                {% endif %}
            {% elseif field.field_type == 'textarea' %}
                {% if field.value is not empty %}
                    <span class="field-info_normal">{{ field.value|nl2br }}</span>
                {% else %}
                    <p class="example-fields">
                        {% helper lang.l('field_add', 'users') %}: {% helper users.usersFieldsExample({'field': 'fe_'~key}) %}
                    </p>
                {% endif %}
            {% elseif field.field_type == 'text' %}
                {% if field.value is not empty %}
                    {{ field.value|nl2br }}
                {% else %}
                    <p class="example-fields">
                        {% helper lang.l('field_add', 'users') %}: {% helper users.usersFieldsExample({'field': 'fe_'~key}) %}
                    </p>
                {% endif %}
            {% elseif field.field_type == 'range' %}
                {% if field.value is not empty and field.value != '0.00'%}
                    {{ field.value }}
                {% else %}
                    -
                {% endif %}
            {% elseif field.field_type == 'multiselect' %}
                {% if field.value is not empty %}
                    {{ field.value_str }}
                {% else %}
                    <p class="example-fields">
                        {% helper lang.l('field_add', 'users') %}: {% helper users.usersFieldsExample({'field': 'fe_'~key}) %}
                    </p>
                {% endif %}
            {% elseif field.field_type == 'checkbox' %}
                {% if field.value is not empty %}
                    {% if field.value == '0' %}
                        {% helper lang.l('option_checkbox_no', 'start') %}
                    {% else %}
                        {% helper lang.l('option_checkbox_yes', 'start') %}
                    {% endif %}
                {% else %}
                    {% helper lang.l('option_checkbox_no', 'start') %}
                {% endif %}
            {% endif %}
            {% if is_owner %}<i class="fas fa-pencil-alt"></i>{% endif %}
        </div>
    </div>
{% endfor %}
