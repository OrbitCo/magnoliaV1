<div data-block="pages" id="fourth-registration-page" class="hide">
    {% if data.is_auth != 0 %}
        <div class="registration-photo">
            <div class="g-flatty-block">
                <div id="user_photo" class="photo-block">
                  {% helper users.formatAvatar({'user': item, 'size': 'great', 'class': 'img-circle img-responsive'}) %}
                    <div>{% helper lang.l('upload_photo', 'users') %}</div>
                </div>
                <div class="description-block">
                    <div class="user-info">
                        <div>{{ data.user.output_name }}, {{ data.user.age }}</div>
                        {{ data.user.location }}
                    </div>
                    <div>{% helper lang.l('field_upload_photo', 'users') %}</div>
                </div>
                <div class="form-group hide">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-md-offset-3">
                        {% helper is_module_installed = utils.depends('like_me') %}
                    <a onclick="{% helper start.setAnalytics('index', 'btn_register_step4') %}locationHref('{{ data.links.like_me }}');return false;" data-action="rebuild-view" class="btn btn-primary btn-block btn-lg"
                       href="#">{% helper lang.l('btn_next', 'start') %}</a>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
         {# <div data-action="skip" class="skip"><a data-action="rebuild-view" class="skip" href="{{ data.links.skip }}">{% helper lang.l('button_skip', 'users') %}</a></div> #}
        </div>
    {% endif %}
</div>
