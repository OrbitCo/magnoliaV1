{% if output_type == 'short' %}
<a data-action="set-payment-system" title="{% helper lang.l('header_account_update', 'users') %}" data-pjax-no-scroll="1"
 onclick="{% helper start.setAnalytics('left_menu_user', 'account_advanced_item') %}">
    <span class="user-short-inf__currency">{% helper start.currency_format_output({'value': user_account}) %}</span>&nbsp;
	<button onclick="{% helper start.setAnalytics('left_menu_user', 'add_funds') %}" class="btn btn-default btn-xs"><i class="fa fa-plus"></i></button>
</a>
{% elseif output_type == 'xs' %}
<span class="xs-menu-actions-info">{% helper start.currency_format_output({'value': user_account}) %}</span>
<a data-action="set-payment-system" title="{% helper lang.l('header_account_update', 'users') %}" data-pjax-no-scroll="1"
onclick="{% helper start.setAnalytics('left_menu_user', 'account_advanced_item') %}">
    <i class="fa fa-plus"></i>&nbsp;{% helper lang.l('xs_menu_home_add_money', 'users') %}
</a>
{% elseif output_type == 'long' %}
        {% helper start.currency_format_output({'value': user_account}) %}
{% endif %}

<script>
    $(function () {
        loadScripts(
            ["{% helper utils.jscript('users_payments', 'UsersPayments.js', 'path') %}"],
            function () {
                users_payments = new UsersPayments({
                    siteUrl: site_url
                });
            },
            ['users_payments'],
            {async: true}
        );
    });
</script>
