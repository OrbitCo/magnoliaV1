<div class="profile-menu clearfix">
    <ul class="btn-group mb10">
        {% helper is_module_installed = utils.depends('wall_events', 'media') %}
        {% if is_module_installed.wall_events %}
            {% helper wall_section_name = lang.l('filter_section_wall', 'users') %}
            <li class="btn btn-default {% if profile_section == 'wall'%}active{% endif %}">
                {% set seodata1 = seodata|merge({'section-code': 'wall', 'section-name': wall_section_name}) %}
                <a data-pjax-no-scroll="1" href="{% helper seo.seolink('users', 'view', seodata1) %}">
                    {{ wall_section_name }}
                </a>
            </li>
        {% endif %}
        {% helper profile_section_name = lang.l('filter_section_profile', 'users') %}
        <li class="btn btn-default  {% if profile_section == 'profile' %}active{% endif %}">
            {% set seodata2 = seodata|merge({'section-code': 'profile', 'section-name': profile_section_name}) %}
            <a data-pjax-no-scroll="1" href="{% helper seo.seolink('users', 'view', seodata2) %}">
                {{ profile_section_name }}
            </a>
        </li>
        {% if not template == 'magazine' %}
            {% if is_module_installed.media %}
                {% helper gallery_section_name = lang.l('filter_section_gallery', 'users') %}
                <li class="btn btn-default {% if profile_section == 'gallery' %}active{% endif %}" >
                    {% set seodata3 = seodata|merge({'section-code': 'gallery', 'section-name': gallery_section_name}) %}
                    <a data-pjax-no-scroll="1" href="{% helper seo.seolink('users', 'view', seodata3) %}">
                        {{ gallery_section_name }}
                    </a>
                </li>
            {% endif %}
        {% endif %}
    </ul>
</div>
