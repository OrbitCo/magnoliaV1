<a title="{{ params.title_text }}" id="delete_select_block_{{ params.id_user }}" class="{{ params.class }}"
   href="{{ site_url }}admin/users/ajax_delete_select/{{ params.id_user }}/{{ params.deleted }}">
    {{ params.title_text }}
</a>

<script type="text/javascript">
    $(function(){
        $('#delete_select_block_{{ params.id_user }}').unbind('click').click(function(){
            $.ajax({
                url: site_url + 'admin/users/ajax_delete_select/{{ params.id_user }}/{{ params.deleted }}',
                cache: false,
                dataType: 'json',
                success: function(data){
                    if (typeof (data.error) !== 'undefined' && data.error.length > 0) {
                        error_object.show_error_block(data.error, 'error');
                    } else {
                        delete_select_block.show_load_block(data.content);
                    }
                }
            });
            return false;
        });
    });
</script>
