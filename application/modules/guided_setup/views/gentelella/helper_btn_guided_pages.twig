{% if guided_menu %}
    <div class="guided_btn">
        <div onclick="{% helper start.setAnalytics('dashboard', 'guide') %}" class="guide_link" id="btn-guide_page" {% if DEMO_MODE %}data-analytics-gid="guide" data-analytics-cat="dashboard"{% endif %}>
            <i class="fas fa-sliders-h pr5" aria-hidden="true"></i>
            {% helper lang.l('admin_btn_guided_pages', 'guided_setup') %}
        </div>
    </div>

    <script type="text/javascript">
        $(function(){
            	loadScripts(
                        [
                            "{% helper utils.jscript('guided_setup', 'frame-slimscroll.js', 'path') %}",
                            "{% helper utils.jscript('guided_setup', 'guided_setup.js', 'path') %}",
                        ],
                        function(){
                                guided_setup = new GuidedSetup({
                                        siteUrl: site_url,
                                        guidedMenuId: {{ guided_menu.id }},
                                        frameName: '{{ guided_menu.gid }}',
                                        btnGuidePage: '#btn-guide_page',
                                });
                        },
                        ['guided_setup'],
                        {async: false}
                );

        });
    </script>

{% endif %}