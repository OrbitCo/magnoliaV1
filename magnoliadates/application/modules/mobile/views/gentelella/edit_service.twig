{% include '@app/header.twig' %}

<form method="post" action="{{ data.action|escape }}" name="save_form" enctype="multipart/form-data" class="form-horizontal">
    <div class="x_panel">
        <div class="x_title h4">
            {% if data.id %}
                Edit service
            {% else %}
                Add service
            {% endif %}
        </div>
        <div class="x_content">
			<div class="row form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    {% helper lang.l('field_product_type', 'mobile') %}: </label>
                <div class="col-md-4 col-sm-4 col-xs-12">              
                    <input type="radio" value="android" name="type" {% if data.type == 'android' %}checked{% endif %}> Android     
                    <input type="radio" value="ios" name="type" {% if data.type == 'ios' %}checked{% endif %}> iOS          
                </div>
            </div>
            <div class="row form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    {% helper lang.l('field_product_sku', 'mobile') %}: </label>
                <div class="col-md-4 col-sm-4 col-xs-12">                
                    <input type="text" value="{{ data.sku|escape }}" name="sku" class="form-control">                
                </div>
            </div>
            <div class="row form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Service: </label>
                <div class="col-md-4 col-sm-4 col-xs-12">                
                    <select name="service_gid" class="form-control">                
                    {% for service in services %}
						<option value="{{ service.gid }}" {% if service.gid == data.service_gid %}selected{% endif %}>{{ service.name }}, {{ service.price }}</option>
                    {% endfor %}
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    {% helper lang.l('field_product_price', 'mobile') %}: </label>
                <div class="col-md-4 col-sm-4 col-xs-12">                
                    <input type="text" value="{{ data.price|escape }}" name="price" class="form-control">                
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-9 col-sm-9 col-xs-12col-md-offset-3 col-sm-offset-3">
                    <button class="btn btn-success" type="submit" name="btn_save" value="1">
                      {% helper lang.l('btn_save', 'start') %}</button>
                    <a class="btn btn-default" href="{{ site_url }}admin/mobile/service_list">
                      {% helper lang.l('btn_cancel', 'start') %}</a>
                </div>
            </div>
        </div>
    </div>
</form>

{% include '@app/footer.twig' %}
