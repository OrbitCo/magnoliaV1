<div class="content-page">
    <div class="ui-title">{% helper lang.l('header_main', 'comments') %}</div>
    <div>
        {% helper lang.l('field_usr_inf_description', 'comments') %}
    </div>
    {% for link, name in pages %}
        <div><a href="{{ link }}">{{ name }}</a></div>
    {% else %}
        {% if is_not_archive %}
            <input type="checkbox" name="ui_comments" data-module="comments" value="1" class="ui_checkbox" data-action="ui_change" checked>
        {% else %}
            <div><i>{% helper lang.l('no_comments', 'comments') %}</i></div>
        {% endif %}
    {% endfor %}
</div>