{% if applications|length > 0 %}
<div class="col-xs-12">
    <div class="oauth-links mb10">
        <div class="mr5 mb10">
            {% helper lang.l('you_can_link', 'users_connections') %}
        </div>
        <ins>
            {% for item in applications %}
            {% if TRIAL_MODE %}
            <a href="javascript:void(0);" class="{{ item.gid }}" data-html="true" title="Social networks login does not work in demo version" data-toggle="tooltip">
                {% else %}
                <a href="{{ site_url }}users_connections/oauth_link/{{ item.id }}" class="{{ item.gid }}">
                    {% endif %}
                    {% if item.gid == 'facebook' %}
                    <i class="fab fa-facebook-f"></i>
                    {% elseif item.gid == 'vkontakte' %}
                    <i class="fab fa-vk"></i>
                    {% elseif item.gid == 'google' %}
                    <i class="fab fa-google"></i>
                    {% elseif item.gid == 'linkedin' %}
                    <i class="fab fa-linkedin-in"></i>
                    {% elseif item.gid == 'twitter' %}
                    <i class="fab fa-twitter"></i>
                    {% endif %}
                </a>
                {% endfor %}
        </ins>
    </div>
</div>
{% endif %}
