<div class="content-page">
    <div class="ui-title">{% helper lang.l('header_main', 'polls') %}</div>
    <div class="ui-descr">
        {% helper lang.l('field_usr_inf_description', 'polls') %}
    </div>
</div>

{% for item in your %}
    {% if item.answers is not empty %}
    <div class="col-xs-12 content-page">
        <div class="ui-title bb">{{ item.poll }}</div>
        <div>
            <ul>
            {% for k, a in item.answers %}
                {% if item['answer_'~k] != 0%}
                    <li>{{ a }}</li>
                {% endif %}
            {% endfor %}
            </ul>
        </div>
    
    </div>
    {% endif %}
{% endfor %}