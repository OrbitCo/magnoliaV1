{% if count_active > 1 %}
    <div class="xs-menu-title">
        {% helper lang.l('xs_menu_home_language', 'users') %}
    </div>
    <select class="form-control" onchange="{% helper start.setAnalytics('right_top_menu', 'language_switch') %} locationHref('{{site_url}}languages/change_lang/' + this.value); " >
        {% for item in languages %}
            {% if item.status == '1' %}
                <option value="{{ item.id }}" {% if item.id == current_lang %}selected{% endif %}>
                    {{ item.name }}
                </option>
            {% endif %}
        {% endfor %}
    </select>
{% endif %}
