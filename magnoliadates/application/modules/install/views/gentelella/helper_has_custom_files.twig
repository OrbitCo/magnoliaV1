{% if info.info.custom is not empty %}
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-xs-12">
            <h4>{% helper lang.l('installer_title_custom_files', 'start') %}</h4>
            <div>
                <ul class="to_do">
                    {% for file in info.info.custom %}
                        <li>
                            <p>
                            <div><i class="fas fa-file-code"></i> {% helper lang.l('installer_custom_file', 'start') %}
                                - {{ file }}</div>
                            <div><i class="far fa-file-code"></i> {% helper lang.l('installer_orig_file', 'start') %}
                                - {{ file }}.orig
                            </div>
                            </p>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
{% endif %}
