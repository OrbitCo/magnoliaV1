{% include '@app/header.twig' %}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <form method="post" action="{{data.action}}" name="save_form" enctype="multipart/form-data"
                  class="form-horizontal form-label-left">
                <div class="form-group">    <!-- Copyright on the index page -->
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                        {% helper lang.l('field_copyright_index_page', 'start') %}:&nbsp;*
                    </label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {% for lang_id, lang_item in languages %}
                            {% set index_page='index_page_' ~ lang_id %}
                                {% if lang_id == current_lang %}
                                    <textarea name="index_page_{{ lang_id }}" rows="3" cols="80" class="form-control"
                                              lang-editor="value" lang-editor-type="data-index_page"
                                              lang-editor-lid="{{ lang_id }}">{{ data[index_page]|escape }}</textarea>
                                {% endif %}
                        {% endfor %}
                        <div class="accordion " id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="panel">
                                <a class="panel-heading" role="tab" id="headingOne" data-toggle="collapse"
                                   data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                    <h4 class="panel-title">{% helper lang.l('others_languages', 'start') %}</h4>
                                </a>
                                <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                    <div class="panel-body">
                                        {% for lang_id, lang_item in languages %}
                                            {% set index_page = 'index_page_' ~ lang_id %}
                                            {% if lang_id != current_lang %}
                                                <div class="form-group">
                                                    <label class="control-label col-md-2 col-sm-2 col-xs-12">{{ lang_item.name }}</label>
                                                    <div class="col-md-10 col-sm-10 col-xs-12">
                                                        <textarea name="{{ index_page }}" class="form-control"
                                                            >{{ data[index_page]|escape }}</textarea>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">    <!-- Copyright on the internal pages -->
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                        {% helper lang.l('field_copyright_internal_pages', 'start') %}:&nbsp;*
                    </label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {% for lang_id, lang_item in languages %}
                            {% set internal='internal_' ~ lang_id %}
                                {% if lang_id == current_lang %}
                                    <textarea name="internal_{{ lang_id }}" rows="3" cols="80" class="form-control"
                                              lang-editor="value" lang-editor-type="data-internal"
                                              lang-editor-lid="{{ lang_id }}">{{ data[internal]|escape }}</textarea>
                                {% endif %}
                        {% endfor %}
                        <div class="accordion " id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="panel">
                                <a class="panel-heading" role="tab" id="headingTwo" data-toggle="collapse"
                                   data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    <h4 class="panel-title">{% helper lang.l('others_languages', 'start') %}</h4>
                                </a>
                                <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                    <div class="panel-body">
                                        {% for lang_id, lang_item in languages %}
                                            {% set internal = 'internal_' ~ lang_id %}
                                            {% if lang_id != current_lang %}
                                                <div class="form-group">
                                                    <label class="control-label col-md-2 col-sm-2 col-xs-12">{{ lang_item.name }}</label>
                                                    <div class="col-md-10 col-sm-10 col-xs-12">
                                                        <textarea  name="{{ internal }}" class="form-control"
                                                            >{{ data[internal]|escape }}</textarea>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">    <!-- Copyright on the cpanel -->
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                        {% helper lang.l('field_copyright_cpanel', 'start') %}:&nbsp;*
                    </label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {% for lang_id, lang_item in languages %}
                            {% set cpanel='cpanel_' ~ lang_id %}
                                {% if lang_id == current_lang %}
                                    <textarea name="cpanel_{{ lang_id }}" rows="3" cols="80" class="form-control"
                                              lang-editor="value" lang-editor-type="data-cpanel"
                                              lang-editor-lid="{{ lang_id }}">{{ data[cpanel]|escape }}</textarea>
                                    
                                {% endif %}
                        {% endfor %}
                        <div class="accordion " id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="panel">
                                <a class="panel-heading" role="tab" id="headingThree" data-toggle="collapse"
                                   data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    <h4 class="panel-title">{% helper lang.l('others_languages', 'start') %}</h4>
                                </a>
                                <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                                    <div class="panel-body">
                                        {% for lang_id, lang_item in languages %}
                                            {% set cpanel = 'cpanel_' ~ lang_id %}
                                            {% if lang_id != current_lang %}
                                                <div class="form-group">
                                                    <label class="control-label col-md-2 col-sm-2 col-xs-12">{{ lang_item.name }}</label>
                                                    <div class="col-md-10 col-sm-10 col-xs-12">
                                                        <textarea  name="{{ cpanel }}" class="form-control"
                                                            >{{ data[cpanel]|escape }}</textarea>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <button class="btn btn-primary" name="btn_save" value="1">{% helper lang.l('btn_save', 'start') %}</button>
            </form>    
        </div>
    </div>    
</div>    
{% include '@app/footer.twig' %}
