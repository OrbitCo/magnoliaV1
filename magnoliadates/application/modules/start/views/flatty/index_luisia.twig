              </li>
              <li>
                <a href="{{ site_url }}news/index">{% helper lang.l('header_news', 'news') %}</a>
              </li>
            </ul>
          </li>
          <li>
            <p>{% helper lang.l('privacy', 'start') %}</p>
            <ul>
              <li>
                <a href="{{ site_url }}content/view/privacy-and-security">{% helper lang.l('privacy', 'start') %}</a>
              </li>
              <li>
                <a href="{{ site_url }}content/view/legal-terms">{% helper lang.l('terms', 'start') %}</a>
              </li>
            </ul>
          </li>

        </ul>
        <section id="copyright" class="col-md-12 copyright">
          {% helper start.getCopyright('index_page') %}
        </section>
      </div>
    </div>
  </footer>
</div>
