  <link rel="stylesheet" href="{{ site_root }}uploads/themes-fixed/luisia/styles/bootstrap-{{ _LANG.rtl }}.css"
        type="text/css"/>
  <link rel="stylesheet" href="{{ site_root }}uploads/themes-fixed/luisia/styles/font-awesome.css" type="text/css"/>
