{% extends '@app/header_lite.twig' %}
 {% block bodyclass %}index-pleasure{% endblock bodyclass %}

 {% block container %}
  <div id="error_block" class="hide">{% for item in _PREDEFINED.error %}{% if item.text %}{{ item.text }}
      <br>{% endif %}{% endfor %}</div>
  <div id="info_block" class="hide">{% for item in _PREDEFINED.info %}{% if item.text %}{{ item.text }}
      <br>{% endif %}{% endfor %}</div>
  <div id="success_block" class="hide">{% for item in _PREDEFINED.success %}{% if item.text %}{{ item.text }}
      <br>{% endif %}{% endfor %}</div>
  <div class="th-set__main_bg" id="header">
    <section class="container header_container">
      <section id="logo" class="col-md-4">
        <div class="b-logo">
          <div class="b-header__logo">
            <a href="{{ site_url }}">
              {% helper start.logo({type: 'user', settings: logo_settings}) %}
            </a>
          </div>
        </div>
      </section>
      <section class="col-md-8">
        <nav class="navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li>
              {% helper reglang = lang.l('join_now', 'start') %}
              {% helper users.usersRegistration({'is_link': 1, 'page': 1, 'lang': reglang, 'class': 'th-set__link_color'}) %}
            </li>
            <li>
              <a href="{{ site_root }}content/view/about-us" class="btn_border"
                 id="btn_abo">{% helper lang.l('about_us', 'start') %}</a>
            </li>
            <li>
              <a href="{{ site_root }}contact_us" class="btn_border"
                 id="btn_con">{% helper lang.l('contacts', 'start') %}</a>
            </li>
            <li>
              <a id="btn_log" class="btn_border" onclick="{% helper start.setAnalytics('index', 'btn_sign_in') %}"
                 href="{% helper seo.seolink('users', 'login_form') %}">
                {% helper lang.l('btn_login', 'start') %}</a>
            </li>
            <li>
              {% helper users.users_lang_select({type: 'menu', template: 'dropdown'}) %}
            </li>
          </ul>
        </nav>
      </section>
    </section>
    <section id="header-photos">
      <div class="clearfix"></div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-4 pd5">
            <img class="img-responsive" src="{{ site_root }}uploads/themes-fixed/luisia/images/b-header-photo-1.jpg"
                 alt="header photo 1">
          </div>
          <div class="col-md-4 pd5">
            <img class="img-responsive" src="{{ site_root }}uploads/themes-fixed/luisia/images/b-header-photo-2.jpg"
                 alt="header photo 2">
          </div>
          <div class="col-md-4 pd5">
            <img class="img-responsive" src="{{ site_root }}uploads/themes-fixed/luisia/images/b-header-photo-3.jpg"
                 alt="header photo 3">
          </div>
        </div>
      </div>
    </section>
    <div class="custom-header-photos"></div>
  </div>
  <main>
    <section id="welcome">
      <div class="th-set__main_bg text-color-white">
        <div class="container">
          <h1 class="slogan th-set__index_promo_text_main">{% helper lang.l('welcome_to_site', 'start') %}</h1>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="container">
        <div class="row pd30">
          <div class="col-xs-6 col-md-4">
            <a href="#" class="thumbnail">
              <img src="{{ site_root }}uploads/themes-fixed/luisia/images/b-ouragency-photo-1.jpg" alt="header photo 1"
                   class="img-responsive">
            </a>
            <a href="#" class="thumbnail">
              <img src="{{ site_root }}uploads/themes-fixed/luisia/images/b-ouragency-photo-3.jpg" alt="header photo 2"
                   class="img-responsive">
            </a>
          </div>
          <div class="col-xs-6 col-md-4">
            <a href="#" class="thumbnail">
              <img src="{{ site_root }}uploads/themes-fixed/luisia/images/b-ouragency-photo-2.jpg" alt="header photo 2"
                   class="img-responsive">
            </a>
            <a href="#" class="thumbnail">
              <img src="{{ site_root }}uploads/themes-fixed/luisia/images/b-ouragency-photo-4.jpg" alt="header photo 2"
                   class="img-responsive">
            </a>
          </div>
          <div class="col-md-4">
            <div class="caption">
              <div class="th-set__link_color">
