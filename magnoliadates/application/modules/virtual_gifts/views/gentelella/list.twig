{% include '@app/header.twig' %}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="" role="tabpanel" data-example-id="togglable-tabs">
            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                {% helper menu.get_admin_level1_menu('admin_virtual_gifts_menu') %}
            </ul>
        </div>
        <div class="x_content">
            <div id="actions" class="hide">
                <div class="btn-group">
                    <a href="{{ site_url }}admin/virtual_gifts/upload" class="btn btn-primary">
                        {% helper lang.l('admin_upload_image', 'virtual_gifts') %}
                    </a>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="{{ site_url }}admin/virtual_gifts/upload">
                                {% helper lang.l('admin_upload_image', 'virtual_gifts') %}
                            </a>
                        </li>
                        <li id="delete_select_block">
                            <a href="javascript:void(0)">
                                {% helper lang.l('admin_delete_gift', 'virtual_gifts') %}</a>
                        </li>
                        <li id="link_add_funds">
                            <a id="btn_add_funds" href="javascript:void(0)">
                                {% helper lang.l('admin_change_price', 'virtual_gifts') %}</a>
                        </li>
                    </ul>
                </div>
            </div>
            <table id="virtual-gifts" class="table table-striped responsive-utilities jambo_table bulk_action">
                <thead>
                    <tr class="headings">
                        <th class="column-group"><input type="checkbox" id="check-all" class="flat"></th>
                        <th class="column-title text-center">{% helper lang.l('gifts_by_order', 'virtual_gifts') %}</th>
                        <th class="column-title">{% helper lang.l('gift_image', 'virtual_gifts') %}</th>
                        <th class="column-title">{% helper lang.l('gift_price', 'virtual_gifts') %}</th>
                        <th class="column-title">{% helper lang.l('text_status', 'start') %}</th>
                        <th class="column-title">&nbsp;</th>
                        <th class="bulk-actions" colspan="5">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in gifts %}
                        <tr>
                            <td class="column-group"><input type="checkbox" class="grouping flat" value="{{ item.id }}" id="prod_{{ item.id }}" data="table_records"></td>
                            <td class="text-center">
                                {% if  not item.sort.first %}
                                    <a href="{{ site_url }}admin/virtual_gifts/sort_gifts/{{ item.id }}/up" style="text-decoration: none;">&uarr;</a>&nbsp;
                                {% endif %}
                                {% if not item.sort.last %}
                                    <a href="{{ site_url }}admin/virtual_gifts/sort_gifts/{{ item.id }}/down" style="text-decoration: none;">&darr;</a>
                                {% endif %}
                            </td>
                            <td>
                                <img src="{{ item.mediafile.thumbs_data.big.file_url }}">
                            </td>
                            <td>{% helper start.currency_format_output({value:item.price}) %}</td>
                            <td>
                              {% if item.is_active %}
                                  {% helper lang.l('btn_tableicon_is_active','start') %}
                              {% else %}
                                  {% helper lang.l('btn_tableicon_is_not_active','start') %}
                              {% endif %}
                            </td>
                            <td class="icons">
                                <div class="btn-group">
                                {% if item.is_active %}
                                    <button type="button" class="btn btn-primary" title="{% helper lang.l('admin_deactivate_gift', 'virtual_gifts') %}"
                                            onclick="document.location.href='{{ site_url }}admin/virtual_gifts/gift_status/{{ item.id }}/0'">
                                        {% helper lang.l('make_inactive','start') %}
                                    </button>
                                {% else %}
                                    <button type="button" class="btn btn-primary" title="{% helper lang.l('admin_activate_gift', 'virtual_gifts') %}"
                                            onclick="document.location.href='{{ site_url }}admin/virtual_gifts/gift_status/{{ item.id }}/1'">
                                        {% helper lang.l('make_active','start') %}
                                    </button>
                                {% endif %}
                                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                        <span class="caret"></span>
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                        {% if item.is_active %}
                                            <a href="{{ site_url }}admin/virtual_gifts/gift_status/{{ item.id }}/0">
                                                {% helper lang.l('make_inactive','start') %}
                                            </a>
                                        {% else %}
                                            <a href="{{ site_url }}admin/virtual_gifts/gift_status/{{ item.id }}/1">
                                                {% helper lang.l('make_active','start') %}
                                            </a>
                                        {% endif %}
                                        </li>
                                        <li>
                                            <a href="{{ site_url }}admin/virtual_gifts/delete/{{ item.id }}"
                                               onclick="javascript: if (!confirm('{% helper lang.l('gift_delete_confirm', 'virtual_gifts') %}')) return false;">
                                                {% helper lang.l('admin_delete_gift', 'virtual_gifts') %}
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% include "@app/pagination.twig" %}
        </div>
    </div>
</div>
{% helper utils.jscript('', 'jquery-ui.custom.min.js') %}
