{% if is_link == 1 or is_registration == 1 %}
    <div data-block="pages" data-act="close" id="first-registration-page" class="hide load-block">
        <div class="col-xs-12 col-md-8 col-lg-6 col-md-offset-2 col-lg-offset-3">
            <div class="g-flatty-block">
                <div class="col-xs-12">
                    <h3>{% helper lang.l('text_promo', 'start') %}</h3>
                    <p>{% helper lang.l('text_promo_second', 'start') %}</p>
                    <div class="col-xs-12 form-group user_types-block">
                        <input type="hidden" name="data[user_type]" value="{{ user_data.user_type }}">
                        <button data-button_type ="i"  type="button" class="btn btn-default dropdown-toggle btn-lg btn-block btn-group" data-toggle="dropdown">
                            <span class="col-xs-11">{% helper lang.l('field_user_type_i', 'users') %}  {% if user_data.user_type is not empty %}{{ data.user_types.option[user_data.user_type] }}{% else %}{{ data.user_types.option.male }}{% endif %}</span>  <span class="caret"></span></button>
                        <ul class="dropdown-menu" role="menu" data-action="user-type" data-user_type="i">
                            {% for key, item in data.user_types.option %}
                                <li data-type="{{ key }}"><a href="javascript:void(0);">{% helper lang.l('field_user_type_i', 'users') %}  {{ item }}</a></li>
                                {% endfor %}
                        </ul>
                    </div>
                    <div class="col-xs-12 form-group user_types-block">
                        <input type="hidden" name="data[looking_user_type]" value="{{ user_data.looking_user_type }}">
                        <button data-button_type ="look" type="button" class="btn btn-default dropdown-toggle btn-lg btn-block btn-group" data-toggle="dropdown">
                            <span class="col-xs-11">{% helper lang.l('field_user_type_look', 'users') %}  {% if user_data.looking_user_type is not empty %}{{ data.user_types.option[user_data.looking_user_type] }}{% else %}{{ data.looking_user_type.option.female }}{% endif %}</span>  <span class="caret"></span></button>
                        <ul class="dropdown-menu" role="menu"  data-action="user-type" data-user_type="look">
                            {% for key, item in data.looking_user_type.option %}
                                <li data-type="{{ key }}"><a href="javascript:void(0);">{% helper lang.l('field_user_type_look', 'users') %}  {{ item }}</a></li>
                                {% endfor %}
                        </ul>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 continue-block">
                            <button onclick="{% helper start.setAnalytics('index', 'btn_register') %}" class="btn btn-primary btn-block btn-lg" data-action="next-page" data-page="1"  type="button">{% helper lang.l('btn_continue', 'users') %}</button>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>

            </div>
            <div class="sign_in-block">
                {% helper lang.l('field_have_account', 'users') %} 
                <a onclick="{% helper start.setAnalytics('index', 'btn_sign_in') %}"  
                   href="{% helper seo.seolink('users', 'login_form') %}" data-bind="login">
                    {% helper lang.l('btn_login', 'start') %}
                </a>
            </div>
            <div class="clearfix"></div>
        </div>    
    </div>
{% else %}
    <div data-block="pages" id="first-registration-page" class="hide">
        <div class="col-sm-7 col-md-9">
            <div class="b-header__message">
                <h2>{% helper lang.l('text_promo', 'start') %}</h2>
                 <p>{% helper lang.l('text_promo_second', 'start') %}</p>
                <div class="col-xs-12 col-sm-12  col-md-5 user_types-block">
                    <input type="hidden" name="data[user_type]" value="{{ user_data.user_type }}">
                    <button data-button_type ="i"  type="button" class="btn btn-default dropdown-toggle btn-lg btn-block btn-group" data-toggle="dropdown">
                        <span class="col-xs-11">{% helper lang.l('field_user_type_i', 'users') %}  {% if user_data.user_type is not empty %}{{ data.user_types.option[user_data.user_type] }}{% else %}{{ data.user_types.option.male }}{% endif %}</span>  <span class="caret"></span></button>
                    <ul class="dropdown-menu" role="menu" data-action="user-type" data-user_type="i">
                        {% for key, item in data.user_types.option %}
                            <li data-type="{{ key }}"><a href="javascript:void(0);">{% helper lang.l('field_user_type_i', 'users') %}  {{ item }}</a></li>
                            {% endfor %}
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-5 user_types-block">
                    <input type="hidden" name="data[looking_user_type]" value="{{ user_data.looking_user_type }}">
                    <button data-button_type ="look" type="button" class="btn btn-default dropdown-toggle btn-lg btn-block btn-group" data-toggle="dropdown">
                        <span class="col-xs-11">{% helper lang.l('field_user_type_look', 'users') %}  {% if user_data.looking_user_type is not empty %}{{ data.user_types.option[user_data.looking_user_type] }}{% else %}{{ data.looking_user_type.option.female }}{% endif %}</span>  <span class="caret"></span></button>
                    <ul class="dropdown-menu" role="menu"  data-action="user-type" data-user_type="look">
                        {% for key, item in data.looking_user_type.option %}
                            <li data-type="{{ key }}"><a href="javascript:void(0);">{% helper lang.l('field_user_type_look', 'users') %}  {{ item }}</a></li>
                            {% endfor %}
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-2 continue-block">
                    <button onclick="{% helper start.setAnalytics('index', 'btn_register') %}" class="btn btn-primary btn-lg btn-block" data-action="next-page" data-page="1"  type="button">{% helper lang.l('btn_continue', 'users') %}</button>
                </div>
                <div class="sign_in-block">
                    {% helper lang.l('field_have_account', 'users') %} 
                    <a onclick="{% helper start.setAnalytics('index', 'btn_sign_in') %}"  
                       href="{% helper seo.seolink('users', 'login_form') %}" data-bind="login">
                        {% helper lang.l('btn_login', 'start') %}
                    </a>
                </div>
            </div>
        </div>    
        <div class="clearfix"></div>
    </div>
{% endif %}